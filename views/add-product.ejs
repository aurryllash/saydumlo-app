<%- include('./partials/header')%>
<style>
    h1{

    font-size: 30px;
    font-weight: 900;
    margin-top: 40px;
    margin-left: 20px;

}
</style>
<section style="padding: 0 0 150px 0;min-height: 100vh;" >
    
    <div class="container">
        <h1>ADD PRODUCT</h1>
        <form id="productForm" style="width: 400px;" action="/products/upload" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Adidas Hoodie..." required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" name="description" id="description" placeholder="description..." required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <input type="number" class="form-control" name="price" id="price" placeholder="99.99..." required>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image</label>
                <input type="file" class="form-control" name="image" id="Image" required>
            </div>
            <button type="submit" id="submitBtn" class="btn btn-success" disabled>Submit</button>
            <a class="btn btn-light" href="/home" style="background-color: rgb(189, 189, 189); color: whitesmoke; margin-left: 20px;">Cancel</a>
        </form>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('productForm');
        const submitBtn = document.getElementById('submitBtn');
        
        const checkFormValidity = () => {
            submitBtn.disabled = !form.checkValidity();
        };

        form.addEventListener('input', checkFormValidity);
        form.addEventListener('change', checkFormValidity);
    });
</script>
